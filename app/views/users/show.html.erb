<h2>User details</h2>

<dl class="dl-horizontal">
  <dt><strong>Full name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0%>
  <%= render 'stocks/list' %>
<% else %>
  <% if @user == current_user %>
    You are not currently tracking any stocks, to start tracking, go to the "My portfolio" section.
  <% else %>
    This user is not tracking any stock right now
  <% end %>
<% end %>